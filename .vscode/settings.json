{
    "python.pythonPath": "D:\\soma\\Anaconda3\\envs\\autopy\\python.exe",
    "editor.fontFamily": "D2Coding, Consolas, 'Courier New', monospace",
    "editor.wordWrap": "off",
    "editor.tabSize": 2,
    "python.formatting.autopep8Args": [
        "--indent-size=2"
    ],
    "python.analysis.disabled": [],
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "python.formatting.yapfArgs": [
        "--style='{based_on_style: chromium, indent_width: 2}'"
    ],
    "python.formatting.provider": "yapf",
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": [
        "--ignore=D203, D205, D212, D213, D400, D406, D407, D413, D415"
    ],
    "restructuredtext.linter.extraArgs": [
        "--ignore D002",
        "--ignore D004"
    ],
    "restructuredtext.confPath": "${workspaceFolder}\\docs\\source"
}
